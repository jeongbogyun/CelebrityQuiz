<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.celebrityquiz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name="com.example.celebrityquiz.LogInActivity"
            android:theme="@style/OrangeThemeNoActionBar" />
        <activity
            android:name="com.example.celebrityquiz.SignUpActivity"
            android:theme="@style/OrangeThemeNoActionBar" />

        <activity
            android:name="com.example.celebrityquiz.MainActivity"
            android:theme="@style/OrangeThemeNoActionBar" />

        <activity
            android:name="com.example.celebrityquiz.GlobalRankingActivity"
            android:theme="@style/OrangeThemeNoActionBar" />

        <activity
            android:name="com.example.celebrityquiz.MyPageActivity"
            android:theme="@style/OrangeThemeNoActionBar" />

        <activity
            android:name="com.example.celebrityquiz.IncorrectNoteActivity"
            android:theme="@style/OrangeThemeNoActionBar" />

        <activity
            android:name="com.example.celebrityquiz.SettingActivity"
            android:theme="@style/OrangeThemeNoActionBar" />


        <activity
            android:name="com.example.celebrityquiz.MultipleChoiceActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name="com.example.celebrityquiz.SolutionActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name="com.example.celebrityquiz.WordQuizActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name="com.example.celebrityquiz.WordSolutionActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>