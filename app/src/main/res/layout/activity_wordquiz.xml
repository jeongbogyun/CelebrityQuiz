                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn11"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn12"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn13"
                android:background ="@drawable/button_orange_less_rounded"
