                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn17"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn18"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn19"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
