<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".QuizActivity">

    <!-- Question view -->
    <TextView
        android:id="@+id/celebrityQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nanumsquarebold"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Celebrity image view -->
    <ImageView
        android:id="@+id/celebrityImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/image_shape_orange"
        android:contentDescription="@null"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celebrityQuestion"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:id="@+id/answerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/celebrityImage">
    </LinearLayout>

    <TableLayout
        android:id="@+id/answerBtnTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/answerLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <Button
                android:id="@+id/btn1"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn2"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn3"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn4"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn5"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn6"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn7"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn8"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/btn9"
                android:background ="@drawable/button_orange_less_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="A"
                android:layout_weight="1">
            </Button>
            <Button
